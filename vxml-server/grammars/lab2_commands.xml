<?xml version="1.0" encoding="UTF-8" ?>
<grammar version="1.0" tag-format="semantics/1.0" root="part2">
    
    <rule id="action">
         <one-of>
             <item>turn</item>
             <item>open</item>
             <item>close</item>
         </one-of>
    <ruleref uri="#object"/>
    <ruleref uri="#state"/>
    <tag>out.o=rules.object; out.s=rules.state;</tag>
    </rule>

    <rule id="object">
       <item repeat="0-1">the</item>
       <one-of>
          <item>light</item>
          <item>heat></item>
          <item>A C</item>
          <item>air conditioning</item>
          <item>window</item>
          <item>door</item>
       </one-of>  
    </rule>

    <rule id="unturnatbleObjects">
        <item repeat="0-1">the</item>
        <one-of>
            <item>window</item>
            <item>door</item>
        </one-of>
    </rule>

    <rule id="state">
        <one-of>
            <item>off</item>
            <item>on</item>
        </one-of>
    </rule>

    <rule id="polite">
        <one-of>
            <item> please </item>
            <item> would you </item>
            <item> can you </item>
        </one-of>  
    </rule>

    <rule id="commands">
        <one-of>
            <item><rulref ur="#action"/><ruleref uri="#object"/><tag>out.action=rules.action; out.object;</tag></item>
        </one-of>
    </rule>

</grammar>
    
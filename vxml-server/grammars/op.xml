<?xml version="1.0" encoding="UTF-8" ?>
<grammar version="1.0" tag-format="semantics/1.0" root ="commands">
    
    <rule id="turning">
         <one-of>
             <item>turn</item>
         </one-of>
    </rule>

    <rule id="openClose">
        <one-of>
            <item>open</item>
            <item>close</item>
        </one-of>
    </rule>

    <rule id="turnableObjects">
       <one-of>
          <item>light</item>
          <item>heat></item>
          <item>A C</item>
          <item>air conditioning</item>
       </one-of>  
    </rule>

    <rule id="unturnableObjects">
        <one-of>
            <item>window</item>
            <item>door</item>
        </one-of>
    </rule>

    <rule id="state">
        <one-of>
            <item>off</item>
            <item>on</item>
        </one-of>
    </rule>

    <rule id="polite">
        <one-of>
            <item> please </item>
            <item> would you </item>
            <item> can you </item>
        </one-of>  
    </rule>

    <rule id="commands">
        <one-of>
            <item><rulref ur="#turning"/><ruleref uri="#turnableObjects"/><ruleref ur="state"/><tag>out.action=rules.action; out.object; out.action=rules.state;</tag></item>
            <item><rulref ur="#openClose"/><ruleref uri="#unturnableObjects"/><ruleref ur="state"/><tag>out.action=rules.action; out.object; out.action=rules.state;</tag></item>
        </one-of>
    </rule>

</grammar>
    
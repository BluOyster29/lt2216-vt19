<?xml version="1.0" encoding="UTF-8" ?>
<grammar version="1.0" tag-format="semantics/1.0" root="booking">
  
  <rule id="statement">
      <one-of>
          <item>I would like to fly<tag>out="you want to fly";</tag></item>
          <item>Could I fly<tag>out="you want to fly";</tag></item>
          <item>Please can I fly<tag>out="you want to fly";</tag></item>
      </one-of>
  </rule>

  <rule id="flyFrom">
      <item repeat="0-1">the</item>
      <one-of>
          <item>from London</item>
          <item>from Paris</item>
          <item>from New York</item>
          <item>from Earth</item>
          <item>from Berlin</item>
      </one-of>
  </rule>
  
  <rule id= "flyTo">
    <one-of>
          <item>to London</item>
          <item>to Paris</item>
          <item>to New York</item>
          <item>to Earth</item>
          <item>to Berlin</item>
      </one-of>
  </rule>

<rule id="booking">
  <one-of>
    <item><ruleref uri="#statement"/><ruleref uri="#flyFrom"/><ruleref uri="#flyTo"/>
    <tag>out.statement=rules.statement; out.flyFrom=rules.flyFrom;out.flyTo=rules.flyTo;</tag>
    </item>
  </one-of>
</rule>

<rule id="flightMeal">
  <one-of>
    <item>Vegetarian option</item>
    <item>Vegan option</item>
    <item>Meat option</item>
  </one-of>
 </rule>

<rule id ="planeType">
  <one-of>
    <item>Boeing 747</item>
    <item>747<tag>out="Boeing 747";</tag></item>
    <item>Conchord</item>
    <item>Hot air balloon</item>
    <item>Helicopter</item>
  </one-of>
</rule>

 <rule id="polite">
   <one-of>
     <item>please</item>
     <item>would you please</item>
     <item>would you kindly</item>
     <item>oi drongo!</item>
   </one-of>
</rule>

<rule id="insideOutsside">
  <one-of>
    <item>inside</item>
    <item>outside</item>
  </one-of>
</rule>

</grammar>

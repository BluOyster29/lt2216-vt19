<?xml version="1.0" encoding="UTF-8" ?>
<vxml version="2.0">
<nomatch>
    I didn't understand.
  </nomatch>
  
  <noinput>
    You didn't say anything.
  </noinput>
  
<form id="test">
    <field name="something">
      <prompt>What would you like to do?</prompt>
      <grammar src="grammars/lab2_commands.xml"/>
    </field>
    <filled>
        <if cond="something$.confidence &lt; 0.3">
          <prompt>
            I did not understand
          <goto next="#test"/>
          </prompt>
        <elseif cond="something$.confidence &lt; 0.35 ">
          <prompt>You want to <value expr="something$.interpretation.action"/>
          <value expr="something$.interpretation.object"/>. Is this correct?</prompt>
          <option>yes</option>
          <option>no</option>
          <if cond="option='yes'">
            <prompt>I will now <value expr="something$.interpretation.action"/> <value expr="something$.interpretation.state"/>
            the <value expr="something$.interpretation.object"/>.
            Thank you for saying <value expr="something$.interpretation.manners"/></prompt>
            <else>
              <goto next="#test"/>
            </else>
            </if>
        </elseif>
        <prompt>
        I will now <value expr="something$.interpretation.action"/> <value expr="something$.interpretation.state"/>
        the <value expr="something$.interpretation.object"/>.
        The object was: <value expr="something$.interpretation.object"/>,
        with a confidence level of <value expr="something$.confidence"/>,
        The Action was: <value expr="something$.interpretation.action"/>,
        And the state was: <value expr="something$.interpretation.state"/>,
        Thank you for saying <value expr="something$.interpretation.manners"/>
        </prompt>
        </if>
    </filled>

  </form>

</vxml>
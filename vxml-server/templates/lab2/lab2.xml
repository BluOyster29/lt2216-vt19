<?xml version="1.0" encoding="UTF-8" ?>
<vxml version="2.0">
  <nomatch>
    I didn't understand.
  </nomatch>
  
  <noinput>
    You didn't say anything.
  </noinput>

  <form id ="funnyQuotes">
    <field name="say">
      <prompt>Say one of the silly phrases</prompt>
      <grammar src="grammars/lab2_quotes.xml"/>
    </field>
    <filled>
    <prompt>
      You said: <value expr="say$.utterance"/>,
      with the interpretation <value expr="say$.interpretation"/>
      and with a confidence of <value expr="say$.confidence"/>
      <break time ="2s"/>
      </prompt>
      <goto next="#commands"/>
    </filled>
  </form>

  <form id="commands">
    <field name="something">
      <prompt>What would you like to do?</prompt>
      <grammar src="grammars/lab2_commands.xml"/>
    </field>
    
  </form>
</vxml>
